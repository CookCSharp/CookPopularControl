<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pc="clr-namespace:CookPopularControl.Controls">

    <Style x:Key="DefaultStarStyle" TargetType="{x:Type pc:Star}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryThemeBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="StarValue" Value="0" />
        <Setter Property="StarCount" Value="5" />
        <Setter Property="StarSize" Value="30" />
        <Setter Property="StarIcon" Value="{DynamicResource StarGeometry}" />
        <Setter Property="IsAllowHalf" Value="True" />
        <Setter Property="IsShowScore" Value="True" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

</ResourceDictionary>
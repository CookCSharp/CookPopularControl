<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pc="clr-namespace:CookPopularControl.Controls">

    <Style x:Key="DefaultAnimationPathStyle" TargetType="{x:Type pc:AnimationPath}">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryThemeBrush}" />
        <Setter Property="StrokeThickness" Value="{DynamicResource Double20Value}" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="IsPlay" Value="False" />
                <Setter Property="Stroke" Value="{DynamicResource UnEnabledBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
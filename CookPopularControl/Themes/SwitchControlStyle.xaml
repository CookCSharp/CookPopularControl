<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pc="clr-namespace:CookPopularControl.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CookPopularControl;component/Themes/BaseStyle/SwitchControlBaseStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="DefaultSwitchControlStyle" TargetType="{x:Type pc:SwitchControl}" BasedOn="{StaticResource SwitchControlBaseStyle}">
        <Setter Property="SwicthCloseBackground" Value="{DynamicResource LinearThemeBrush}" />
        <Setter Property="SwitchOpenBackground" Value="{DynamicResource PrimaryThemeBrush}" />
    </Style>

</ResourceDictionary>
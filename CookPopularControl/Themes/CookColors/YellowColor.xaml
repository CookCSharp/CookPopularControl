<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CookPopularControl;component/Themes/CookColors/BaseColor.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="PrimaryThemeColor">#FFFF33</Color>
    <Color x:Key="AssistantThemeColor">#00DD00</Color>
    <SolidColorBrush x:Key="PrimaryThemeBrush" Color="{StaticResource PrimaryThemeColor}" />
    <SolidColorBrush x:Key="AssistantThemeBrush" Color="{StaticResource AssistantThemeColor}" />

    <Color x:Key="BorderBrushColor">#FFFF22</Color>
    <Color x:Key="ButtonBaseMouseOverColor">#EEEE00</Color>
    <Color x:Key="ButtonBasePressColor">#CCCC00</Color>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderBrushColor}" />
    <SolidColorBrush x:Key="ButtonBaseMouseOverBackground" Color="{StaticResource ButtonBaseMouseOverColor}" />
    <SolidColorBrush x:Key="ButtonBasePressBackground" Color="{StaticResource ButtonBasePressColor}" />

    <Color x:Key="DataGridRowSelectedColor">#FFFF33</Color>
    <Color x:Key="DataGridRowMouseOverColor">#EEEE00</Color>
    <Color x:Key="DataGridRowMouseOverSelected">#CCCC00</Color>
    <Color x:Key="DataGirdCellFocusedColor">#00DD00</Color>

</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:assistant="clr-namespace:CookPopularControl.Controls.ScrollControls"
                    xmlns:toolsConverters="clr-namespace:CookPopularControl.Tools.Windows.Converters">

    <Style x:Key="DefaultScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryThemeBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="assistant:ScrollViewerAssistant.IsCornerShow" Value="False" />
        <Setter Property="assistant:ScrollViewerAssistant.IsAutoHideScrollBar" Value="True" />
        <Setter Property="assistant:ScrollBarAssistant.IsScrollBarRepeatButton" Value="False" />
        <Setter Property="assistant:ScrollBarAssistant.ThumbInsideMargin" Value="0" />
        <!--<Setter Property="assistant:ScrollBarAssistant.VerticalScrollBarWidth" Value="{x:Static SystemParameters.VerticalScrollBarWidth}" />
        <Setter Property="assistant:ScrollBarAssistant.HorizontalScrollBarHeight" Value="{x:Static SystemParameters.HorizontalScrollBarHeight}" />-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" x:Name="col"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" x:Name="row"/>
                        </Grid.RowDefinitions>
                        <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" Grid.Row="0" Grid.Column="0"
                                                CanContentScroll="{TemplateBinding CanContentScroll}"
                                                CanHorizontallyScroll="False" CanVerticallyScroll="False"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                Margin="{TemplateBinding Padding}" />
                        <ScrollBar x:Name="PART_VerticalScrollBar" Grid.Row="0" Grid.Column="1"
                                   assistant:ScrollBarAssistant.IsScrollBarRepeatButton="{TemplateBinding assistant:ScrollBarAssistant.IsScrollBarRepeatButton}"
                                   assistant:ScrollBarAssistant.ThumbInsideMargin="{TemplateBinding assistant:ScrollBarAssistant.ThumbInsideMargin}"
                                   AutomationProperties.AutomationId="VerticalScrollBar"
                                   Maximum="{TemplateBinding ScrollableHeight}"
                                   Orientation="Vertical"
                                   ViewportSize="{TemplateBinding ViewportHeight}"
                                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                   Foreground="{TemplateBinding Foreground}"
                                   Value="{TemplateBinding VerticalOffset}" />
                        <ScrollBar x:Name="PART_HorizontalScrollBar" Grid.Row="1" Grid.Column="0"
                                   assistant:ScrollBarAssistant.IsScrollBarRepeatButton="{TemplateBinding assistant:ScrollBarAssistant.IsScrollBarRepeatButton}"
                                   assistant:ScrollBarAssistant.ThumbInsideMargin="{TemplateBinding assistant:ScrollBarAssistant.ThumbInsideMargin}"
                                   AutomationProperties.AutomationId="HorizontalScrollBar"
                                   Maximum="{TemplateBinding ScrollableWidth}"
                                   Orientation="Horizontal"
                                   ViewportSize="{TemplateBinding ViewportWidth}"
                                   Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                   Foreground="{TemplateBinding Foreground}"
                                   Value="{TemplateBinding HorizontalOffset}" />
                        <Rectangle x:Name="PART_Corner" Grid.Row="1" Grid.Column="1"
                                   Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(assistant:ScrollViewerAssistant.IsCornerShow), Converter={toolsConverters:BooleanToVisibilityConverter}}"
                                   Fill="{TemplateBinding Foreground}"
                                   Opacity="0.8" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(assistant:ScrollBarAssistant.VerticalScrollBarWidth),Converter={toolsConverters:ValueMoreThanTargetValue},ConverterParameter=0}" Value="True">
                            <Setter TargetName="col" Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(assistant:ScrollBarAssistant.VerticalScrollBarWidth)}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(assistant:ScrollBarAssistant.HorizontalScrollBarHeight),Converter={toolsConverters:ValueMoreThanTargetValue},ConverterParameter=0}" Value="True">
                            <Setter TargetName="row" Property="Height" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(assistant:ScrollBarAssistant.HorizontalScrollBarHeight)}" />
                        </DataTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="assistant:ScrollViewerAssistant.IsAutoHideScrollBar" Value="True" />
                                <Condition Property="ComputedVerticalScrollBarVisibility" Value="Visible" />
                                <Condition Property="IsMouseOver" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_VerticalScrollBar" Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="PART_Corner" Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_VerticalScrollBar" Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="PART_Corner" Storyboard.TargetProperty="Opacity"
                                                         To="0.8" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="assistant:ScrollViewerAssistant.IsAutoHideScrollBar" Value="True" />
                                <Condition Property="ComputedHorizontalScrollBarVisibility" Value="Visible" />
                                <Condition Property="IsMouseOver" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_HorizontalScrollBar" Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_HorizontalScrollBar" Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SmoothScrollViewerStyle" TargetType="{x:Type assistant:SmoothScrollViewer}" BasedOn="{StaticResource DefaultScrollViewerStyle}">
        <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel" />
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
    </Style>

</ResourceDictionary>
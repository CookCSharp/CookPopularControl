<UserControl x:Class="TestDemo.Demos.TabControlDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDemo.Demos"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TabControl Width="300" Height="300" Style="{StaticResource DefaultTabControlStyle}"
                    TabStripPlacement="Left" HorizontalAlignment="Left"
                    Foreground="#FFFFFF" Background="{StaticResource BlockColor}">
                <TabItem Header="First">第一个页面</TabItem>
                <TabItem Header="Second">第二个页面</TabItem>
                <TabItem Header="Third">第三个页面</TabItem>
                <TabItem Header="Fourth">第四个页面</TabItem>
            </TabControl>

            <TabControl Width="300" Height="300" Style="{StaticResource DefaultTabControlStyle}"
                    TabStripPlacement="Top" HorizontalAlignment="Left" Margin="30,0"
                    Foreground="#FFFFFF" Background="{StaticResource BlockColor}">
                <TabItem Header="First">第一个页面</TabItem>
                <TabItem Header="Second">第二个页面</TabItem>
                <TabItem Header="Third">第三个页面</TabItem>
                <TabItem Header="Fourth">第四个页面</TabItem>
            </TabControl>

            <TabControl Width="300" Height="300" Style="{StaticResource DefaultTabControlStyle}"
                    TabStripPlacement="Right" HorizontalAlignment="Left" Margin="0,0,30,0"
                    Foreground="#FFFFFF" Background="{StaticResource BlockColor}">
                <TabItem Header="First">第一个页面</TabItem>
                <TabItem Header="Second">第二个页面</TabItem>
                <TabItem Header="Third">第三个页面</TabItem>
                <TabItem Header="Fourth">第四个页面</TabItem>
            </TabControl>

            <TabControl Width="300" Height="300" Style="{StaticResource DefaultTabControlStyle}"
                    TabStripPlacement="Bottom" HorizontalAlignment="Left"
                    Foreground="#FFFFFF" Background="{StaticResource BlockColor}">
                <TabItem Header="First">第一个页面</TabItem>
                <TabItem Header="Second">第二个页面</TabItem>
                <TabItem Header="Third">第三个页面</TabItem>
                <TabItem Header="Fourth">第四个页面</TabItem>
            </TabControl>
        </WrapPanel>
    </ScrollViewer>

</UserControl>

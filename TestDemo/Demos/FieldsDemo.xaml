<UserControl x:Class="TestDemo.Demos.FieldsDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDemo.Demos"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <WrapPanel Width="800">
            <TextBox Width="300" Height="40" BorderThickness="1"
                     Style="{StaticResource DefaultTextBoxStyle}"/>
            <TextBox Width="300" Height="40" BorderThickness="1" Margin="30,0" IsEnabled="False"
                     Style="{StaticResource AddClearButtonTextBoxStyle}"/>
            <TextBox Width="300" Height="40" BorderThickness="1" Margin="0,20"
                     Style="{StaticResource ValidationTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="TextContent" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <pc:RegularPatternValidationRule RegularPattern="Chinese" ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox Width="300" Height="40" BorderThickness="1" Margin="30,0"
                     Style="{StaticResource ValidationAddClearButtonTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="TextContent" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <pc:RegularPatternValidationRule RegularPattern="Chinese" ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="CookPopularControl" FontSize="50" FontWeight="DemiBold" Foreground="DodgerBlue"/>
            <pc:TextPath Width="500" Height="100" Text="写代码的厨子"/>
            <pc:TextPath Width="500" Height="100" Text="写代码的厨子" Fill="Transparent"/>
            <pc:TextPath Width="500" Height="100" Text="Chance" 
                     pc:TextPath.FillImageSource="../Resources/Gif/tomcat.jpg"
                     pc:TextPath.DrawingRec="0,0,20,20"
                     Style="{StaticResource FillImageTextPathStyle}"/>
            <pc:TextPath Width="500" Height="100" Text="Chance" Stroke="Purple" StrokeThickness="2"
                     pc:TextPath.DrawingRec="0,0,5,5"
                     pc:FrameworkElementBaseAttached.IconGeometry="{StaticResource LeafGeometry}"
                     Style="{StaticResource FillIconTextPathStyle}"/>
        </WrapPanel>
    </StackPanel>
    
</UserControl>

<UserControl x:Class="TestDemo.Demos.TextBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDemo.Demos"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <WrapPanel Width="800">
            <TextBox Width="300" Height="40" BorderThickness="1"
                     Style="{StaticResource DefaultTextBoxStyle}"/>
            <TextBox Width="300" Height="40" BorderThickness="1" Margin="30,0" IsEnabled="False"
                     Style="{StaticResource AddClearButtonTextBoxStyle}"/>
            <TextBox Width="300" Height="40" BorderThickness="1" Margin="0,20"
                     Style="{StaticResource ValidationTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="TextContent" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <pc:RegularPatternValidationRule RegularPattern="Chinese" ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox Width="300" Height="40" BorderThickness="1" Margin="30,0"
                     Style="{StaticResource ValidationAddClearButtonTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="TextContent" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <pc:RegularPatternValidationRule RegularPattern="Chinese" ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </WrapPanel>
    </StackPanel>
    
</UserControl>

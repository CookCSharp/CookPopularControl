<UserControl x:Class="TestDemo.Demos.GifBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDemo.Demos"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Viewbox Width="200" Height="200">
            <pc:GifBox Width="200" Height="200" Duration="0:0:5" Stretch="Uniform"
                       Stroke="DodgerBlue" StrokeThickness="10" Data="{StaticResource FatalGeometry}"/>
        </Viewbox>
    </Grid>
    
    
</UserControl>

<UserControl x:Class="TestDemo.Demos.RadioButtonDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDemo.Demos"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel VerticalAlignment="Center">
        <RadioButton Width="100" Height="34" Content="Default"/>
        <RadioButton Width="100" Height="34" Content="Chance" 
                     Foreground="Red" BorderBrush="Yellow" BorderThickness="2"
                     HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <RadioButton Width="150" Height="60" Content="写代码的厨子"
                     pc:RadioButtonAssistant.CircleDiameter="30"/>

        <RadioButton Width="150" Height="60" Content="写代码的厨子" GroupName="Chance"
                     pc:RadioButtonAssistant.CircleDiameter="30" Style="{StaticResource FillFullyRadioButtonStyle}"/>
    </StackPanel>
    
</UserControl>

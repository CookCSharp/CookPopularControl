    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ScrollBar Width="50" Height="100" Value="0" Minimum="0" Maximum="100"    
                       Background="#F0F0F0" Orientation="Vertical" Foreground="Red"
                       BorderBrush="{StaticResource AssistantColorTheme}" BorderThickness="1"
                       Style="{StaticResource DefaultScrollBarStyle}" />
            <ScrollBar Width="50" Height="100" Value="0" Minimum="0" Maximum="100" Margin="30,0"
                       Background="#F0F0F0" Orientation="Vertical" Foreground="Red"
                       BorderBrush="{StaticResource AssistantColorTheme}" BorderThickness="1"
                       Style="{StaticResource ThumbMarginScrollBarStyle}"
                       pc:ScrollBarAssistant.IsScrollBarRepeatButton="False"
                       pc:ScrollBarAssistant.ThumbInsideMargin="0,5"/>

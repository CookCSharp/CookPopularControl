                       Background="#F0F0F0" Orientation="Horizontal" Margin="20,0"
                       BorderBrush="{StaticResource AssistantColorTheme}" BorderThickness="1"
                       Style="{StaticResource NoRepeatButtonScrollBarStyle}"
                       pc:ScrollBarAssistant.ThumbInsideMargin="5"/>
        </WrapPanel>

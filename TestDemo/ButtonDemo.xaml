<UserControl x:Class="TestDemo.ButtonDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="ButtonStyles" TargetType="{x:Type Button}" BasedOn="{StaticResource ContentWithIconButtonStyle}">
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="60" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="{StaticResource RobotoFonts}" />
            <Setter Property="Content" Value="IconWithContentButton" />
            <Setter Property="pc:FrameworkElementBaseAttached.IconGeometry" Value="{StaticResource SuccessGeometry}" />
        </Style>
    </UserControl.Resources>

    <StackPanel VerticalAlignment="Center">
        <WrapPanel HorizontalAlignment="Center">
            <Button Style="{StaticResource ButtonStyles}"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                    pc:ButtonBaseAttached.IconDirection="Left"
                    pc:FrameworkElementBaseAttached.IconMargin="0,0,5,0"
                    pc:FrameworkElementBaseAttached.CornerRadius="5"/>
            <Button Style="{StaticResource ButtonStyles}" Margin="10,0,0,0"
                    pc:ButtonBaseAttached.IconDirection="Right"
                    pc:FrameworkElementBaseAttached.IconMargin="15,0,0,0"/>
            <Button Style="{StaticResource ButtonStyles}" Margin="0,10,0,0"
                    pc:ButtonBaseAttached.IconDirection="Top"
                    pc:FrameworkElementBaseAttached.IconMargin="0,0,0,15"/>
            <Button Style="{StaticResource ButtonStyles}" Margin="10,10,0,0"
                    pc:ButtonBaseAttached.IconDirection="Bottom"
                    pc:FrameworkElementBaseAttached.IconMargin="0,5,0,0"/>
        </WrapPanel>

        <Button Width="300" Height="60" Content="DefaultButton" FontSize="20" Margin="0,20,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="OnlyIconButton" FontSize="20" FontFamily="{StaticResource RobotoFonts}" VerticalAlignment="Center"/>
            <Button Width="300" Height="60" FontSize="20" Margin="20,0,155,0"
                    pc:FrameworkElementBaseAttached.IconWidth="30"
                    pc:FrameworkElementBaseAttached.IconHeight="30"
                    pc:FrameworkElementBaseAttached.IconGeometry="{StaticResource SuccessGeometry}"/>
        </StackPanel>
    </StackPanel>

</UserControl>

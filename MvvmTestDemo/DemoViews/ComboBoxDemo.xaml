<UserControl x:Class="MvvmTestDemo.DemoViews.ComboBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmTestDemo.DemoViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d"
             d:DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Width="{StaticResource DemoViewsDefaultWidth}" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="SimpleComboBox:"
                   FontSize="20"
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="MultiComboBox:"
                   FontSize="20"
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Uneditable"
                   Foreground="DarkSlateGray"
                   FontSize="20"
                   HorizontalAlignment="Center" />
        <TextBlock Grid.Row="0" Grid.Column="2"
                   Text="IsEditable"
                   Foreground="DarkSlateGray"
                   FontSize="20"
                   HorizontalAlignment="Center" />

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <ComboBox Width="200" SelectedIndex="0" Style="{StaticResource DefaultComboBoxStyle}">
                <ComboBoxItem Content="Chance" />
                <ComboBoxItem Content="Lori" />
                <ComboBoxItem Content="写代码的厨子" />
            </ComboBox>
            <ComboBox Width="200"
                      Margin="0,10"
                      pc:ComboBoxAssistant.DropDownButtonFill="Green" SelectedIndex="0"
                      Style="{StaticResource AddClearButtonComboBoxStyle}">
                <ComboBoxItem Content="Chance" />
                <ComboBoxItem Content="Lori" />
                <ComboBoxItem Content="写代码的厨子" />
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center">
            <ComboBox Width="200"
                      IsEditable="True" SelectedIndex="0"
                      Style="{StaticResource DefaultComboBoxStyle}">
                <ComboBoxItem Content="Chance" />
                <ComboBoxItem Content="Lori" />
                <ComboBoxItem Content="写代码的厨子" />
            </ComboBox>
            <ComboBox Width="200"
                      Margin="0,10"
                      pc:ComboBoxAssistant.DropDownButtonFill="Green" SelectedIndex="0"
                      Style="{StaticResource AddClearButtonComboBoxStyle}">
                <ComboBoxItem Content="Chance" />
                <ComboBoxItem Content="Lori" />
                <ComboBoxItem Content="写代码的厨子" />
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center">
            <ComboBox Width="200"
                      pc:SelectorAttached.IsItemChecked="ComboBox_IsItemChecked"
                      ItemsSource="{Binding Lists}"
                      SelectedIndex="0"
                      Style="{StaticResource MultiComboBoxCheckBoxItemsStyle}" />
            <ComboBox Width="200"
                      Margin="0,10"
                      pc:SelectorAttached.IsItemDelete="ComboBox_IsItemDelete"
                      ItemsSource="{Binding Lists}"
                      SelectedIndex="0"
                      Style="{StaticResource MultiComboBoxButtonItemsStyle}" />
            <ComboBox Width="200"
                      pc:SelectorAttached.IsPreviewImage="True"
                      ItemsSource="{Binding ImageLists}"
                      Style="{StaticResource MultiComboBoxImageItemsStyle}" />
            <ComboBox Width="200"
                      Margin="0,10,0,0"
                      ItemsSource="{Binding IconLists}"
                      Style="{StaticResource MultiComboBoxIconItemsStyle}" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center">
            <ComboBox Width="200"
                      pc:SelectorAttached.IsItemChecked="ComboBox_IsItemChecked" IsEditable="True"
                      ItemsSource="{Binding Lists}"
                      SelectedIndex="0"
                      Style="{StaticResource AddClearButtonMultiComboBoxCheckBoxItemsStyle}" />
            <ComboBox Width="200"
                      Margin="0,10"
                      pc:SelectorAttached.IsItemDelete="ComboBox_IsItemDelete"
                      ItemsSource="{Binding Lists}"
                      SelectedIndex="0"
                      Style="{StaticResource AddClearButtonMultiComboBoxButtonItemsStyle}" />
            <ComboBox Width="200"
                      pc:SelectorAttached.IsPreviewImage="True"
                      ItemsSource="{Binding ImageLists}"
                      Style="{StaticResource AddClearButtonMultiComboBoxImageItemsStyle}" />
            <ComboBox Width="200"
                      Margin="0,10,0,0"
                      ItemsSource="{Binding IconLists}"
                      Style="{StaticResource AddClearButtonMultiComboBoxIconItemsStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="3">
            <StackPanel>
                <CheckBox Content="ItemsCheckBox" FontSize="14" />
                <Button Content="ItemsButton"
                        FontSize="14"
                        Margin="0,10"
                        pc:FrameworkElementBaseAttached.CornerRadius="2" />
                <WrapPanel>
                    <Path Width="30" Height="30"
                          Data="{StaticResource LeafGeometry}"
                          Fill="Red"
                          Stretch="Uniform" />
                    <TextBlock Text="ItemsIcon"
                               FontSize="14"
                               Margin="10,0"
                               VerticalAlignment="Center" />
                </WrapPanel>
                <WrapPanel Margin="0,10,0,0">
                    <pc:Gif Width="34" Height="34" GifSource="../Resources/Gif/programmer.gif" />
                    <TextBlock Text="ItemsImageGif"
                               FontSize="14"
                               Margin="10,0"
                               VerticalAlignment="Center" />
                </WrapPanel>
            </StackPanel>
        </StackPanel>
    </Grid>

</UserControl>

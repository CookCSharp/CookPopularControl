<UserControl x:Class="MvvmTestDemo.DemoViews.ListsDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmTestDemo.DemoViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d"
             d:DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="800"
             d:DesignWidth="800">

    <ScrollViewer>
        <StackPanel Width="{StaticResource DemosViewViewDefaultWidth}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel HorizontalAlignment="Center">
                <ListBox SelectedIndex="0" SelectionMode="Single"
                         Style="{StaticResource DefaultListBoxStyle}"
                         Width="300" Height="150">
                    <ListBoxItem Content="Chance" />
                    <ListBoxItem Content="Lori" />
                    <ListBoxItem Content="写代码的厨子" />
                </ListBox>
                <ListBox SelectionMode="Extended"
                         Style="{StaticResource ListBoxCheckBoxStyle}"
                         Width="300" Height="150"
                         Margin="30,0">
                    <ListBoxItem Content="Chance" />
                    <ListBoxItem Content="Lori" />
                    <ListBoxItem Content="写代码的厨子" />
                </ListBox>
            </WrapPanel>
            <WrapPanel Margin="0,30" HorizontalAlignment="Center">
                <ListBox pc:SelectorAttached.IsItemDelete="ListBox_IsItemDelete"
                         ItemsSource="{Binding Lists}"
                         SelectionMode="Single"
                         Style="{StaticResource ListBoxButtonStyle}"
                         Width="300" Height="150" />
                <ListBox ItemsSource="{Binding IconLists}"
                         SelectionMode="Single"
                         Style="{StaticResource ListBoxIconStyle}"
                         Width="300" Height="150"
                         Margin="30,0" />
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center">
                <ListBox pc:SelectorAttached.IsPreviewImage="True"
                         ItemsSource="{Binding ImageLists}"
                         SelectionMode="Single"
                         Style="{StaticResource ListBoxImageStyle}"
                         Width="300" Height="150" />
                <ListView SelectedIndex="0"
                          Style="{StaticResource DefaultListViewStyle}"
                          Width="300" Height="150"
                          Margin="30,0" Padding="16,0,0,0">
                    <ListViewItem Content="Lori" />
                    <ListViewItem Content="Chance" />
                    <ListViewItem Content="写代码的厨子" />
                </ListView>
            </WrapPanel>
            <WrapPanel Margin="0,30,0,0" HorizontalAlignment="Center">
                <ListView pc:SelectorAttached.ItemHeight="40"
                          ItemsSource="{Binding PersonInfos}"
                          Style="{StaticResource ListViewGirdViewStyle}"
                          Width="700" Height="200"
                          HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                            <GridViewColumn DisplayMemberBinding="{Binding Age}" Header="Age" Width="100" />
                            <GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Description" />
                            <GridViewColumn Header="Options">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Width="100" Height="35">
                                            <ComboBoxItem Content="Test1" />
                                            <ComboBoxItem Content="Test2" />
                                            <ComboBoxItem Content="Test3" />
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock Text="123" />
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>

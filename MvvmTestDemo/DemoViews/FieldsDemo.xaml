<UserControl x:Class="MvvmTestDemo.DemoViews.FieldsDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmTestDemo.DemoViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Width="{StaticResource DemoViewsDefaultWidth}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="TextBox:"
                       FontSize="20" FontWeight="DemiBold"
                       Margin="0,0,0,10" />
            <WrapPanel>
                <TextBox Style="{StaticResource DefaultTextBoxStyle}"
                         Width="300" Height="34"
                         BorderThickness="1" />
                <TextBox IsEnabled="False"
                         Style="{StaticResource AddClearButtonTextBoxStyle}"
                         Width="300" Height="34"
                         BorderThickness="1"
                         Margin="20,0" />
                <TextBox Style="{StaticResource ValidationTextBoxStyle}"
                         Width="300" Height="34"
                         BorderThickness="1"
                         Margin="0,20">
                    <TextBox.Text>
                        <Binding Mode="TwoWay" Path="TextContent1" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <pc:RangeValueValidationRule MaxValue="10" MinValue="1" ValidatesOnTargetUpdated="True" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <TextBox Style="{StaticResource ValidationAddClearButtonTextBoxStyle}"
                         Width="300" Height="34"
                         BorderThickness="1"
                         Margin="20,0">
                    <TextBox.Text>
                        <Binding Mode="TwoWay" Path="TextContent2" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <pc:RegularPatternValidationRule RegularPattern="Chinese" ValidatesOnTargetUpdated="True" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </WrapPanel>

            <TextBlock Text="NumericUpDown:"
                       FontSize="20" FontWeight="DemiBold"
                       Margin="0,30,0,10" />
            <WrapPanel>
                <pc:NumericUpDown Maximum="10" Width="200" Height="34" />
                <pc:NumericUpDown Increment="0.5" IsShowUpDownButton="False" Maximum="20"
                                  ValueChanged="NumericUpDown_ValueChanged"
                                  Width="200" Height="34"
                                  Margin="20,0" />
                <pc:NumericUpDown Increment="0.5" Maximum="10" ValueFormat="F4"
                                  Width="200" Height="34" />
                <pc:NumericUpDown Style="{StaticResource NumericUpDownAddClearButtonStyle}"
                                  Width="200" Height="34"
                                  Margin="0,20" />
                <pc:NumericUpDown Maximum="20" Minimum="0"
                                  Style="{StaticResource NumericUpDownAddClearButtonStyle}"
                                  Width="200" Height="34"
                                  Margin="20">
                    <pc:NumericUpDown.Value>
                        <Binding Mode="TwoWay" Path="NumericValue" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <pc:RangeValueValidationRule ErrorMessage="{x:Null}"
                                                             MaxValue="10" MinValue="5" ValidatesOnTargetUpdated="True" />
                            </Binding.ValidationRules>
                        </Binding>
                    </pc:NumericUpDown.Value>
                </pc:NumericUpDown>
                <pc:NumericUpDown IsEnabled="False" IsReadOnly="True" Maximum="10"
                                  ToolTip="ReadOnly"
                                  Width="200" Height="34"
                                  Value="5" />
            </WrapPanel>

            <TextBlock Text="TextPath:"
                       FontSize="20" FontWeight="DemiBold"
                       Margin="0,30,0,10" />
            <WrapPanel>
                <TextBlock Text="CookPopularControl"
                           Foreground="DodgerBlue"
                           FontSize="60" FontWeight="DemiBold" />
                <pc:TextPath Text="写代码的厨子" Width="380" Height="120" />
                <pc:TextPath Fill="Transparent"
                             Text="写代码的厨子"
                             Width="380" Height="120"
                             Margin="10,0" />
                <pc:TextPath pc:TextPath.DrawingRec="0,0,20,20" pc:TextPath.FillImageSource="../Resources/Gif/tomcat.jpg"
                             Style="{StaticResource FillImageTextPathStyle}"
                             Text="Chance"
                             Width="380" Height="120" />
                <pc:TextPath pc:FrameworkElementBaseAttached.IconGeometry="{StaticResource LeafGeometry}"
                             pc:TextPath.DrawingRec="0,0,5,5" Stroke="Purple" StrokeThickness="2"
                             Style="{StaticResource FillIconTextPathStyle}"
                             Text="Chance"
                             Width="380" Height="120"
                             Margin="10,0" />
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>

<UserControl x:Class="MvvmTestDemo.DemoViews.AnimationDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmTestDemo.DemoViews"
             xmlns:userCtl="clr-namespace:MvvmTestDemo.UserControls"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:vm="clr-namespace:MvvmTestDemo.DemoViewModels"
             d:DataContext="{Binding Source={d:DesignInstance Type=vm:AnimationDemoViewModel}}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="{x:Type Slider}" BasedOn="{StaticResource DefaultSliderStyle}">
            <Setter Property="pc:ThumbAttached.ThumbWidth" Value="20" />
            <Setter Property="pc:ThumbAttached.ThumbHeight" Value="20" />
        </Style>
    </UserControl.Resources>
    
    <Grid Width="{StaticResource DemoViewsDefaultWidth}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="0" Width="200" Height="200" VerticalAlignment="Center">
            <pc:AnimationPath Width="200" Height="200" Duration="0:0:5" Stretch="Uniform" IsEnabled="True"
                              Data="{StaticResource ArchGeometry}"/>
        </Viewbox>
        <Grid Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" >
                <TextBlock Width="150" Text="{Binding ElementName=ItemSizeSlider,Path=Value,StringFormat=ItemSize:{0:F2}}" FontSize="16" FontWeight="DemiBold" Margin="5,0"/>
                <Slider x:Name="ItemSizeSlider" Minimum="5" Maximum="300" SmallChange="5" LargeChange="20"
                        Value="{Binding TilePanel.ItemWidth,ValidatesOnExceptions=true}"/>
            </DockPanel>
            <DockPanel Grid.Row="1" >
                <TextBlock Width="150" Text="{Binding ElementName=DampeningSlider,Path=Value,StringFormat=Dampening:{0:F2}}" FontSize="16" FontWeight="DemiBold" Margin="5,0"/>
                <Slider x:Name="DampeningSlider" Minimum="0.01" Maximum="0.99" SmallChange="0.01" LargeChange="0.1"
                        Value="{Binding TilePanel.Dampening,ValidatesOnExceptions=true}"/>
            </DockPanel>
            <DockPanel Grid.Row="2">
                <TextBlock Width="150" Text="{Binding ElementName=AttractionSlider,Path=Value,StringFormat=Attraction:{0:F2}}" FontSize="16" FontWeight="DemiBold" Margin="5,0"/>
                <Slider x:Name="AttractionSlider"  Minimum="0.01" Maximum="10" SmallChange="0.1" LargeChange="1"
                        Value="{Binding TilePanel.Attraction,ValidatesOnExceptions=true}"/>
            </DockPanel>
            <DockPanel Grid.Row="3">
                <TextBlock Width="150" Text="{Binding ElementName=VariationSlider,Path=Value,StringFormat=Variation:{0:F2}}" FontSize="16" FontWeight="DemiBold" Margin="5,0"/>
                <Slider x:Name="VariationSlider" Minimum="0" Maximum="1" SmallChange="0.1" LargeChange="0.5"
                        Value="{Binding TilePanel.Variation,ValidatesOnDataErrors=True}"/>
            </DockPanel>
            <ItemsControl Grid.Row="4" ItemsSource="{Binding TilePanelColors}" Focusable="False">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <pc:AnimationTilePanel ItemWidth="{Binding ElementName=ItemSizeSlider,Path=Value}"
                                               ItemHeight="{Binding ElementName=ItemSizeSlider,Path=Value}"
                                               Dampening="{Binding ElementName=DampeningSlider,Path=Value}"
                                               Attraction="{Binding ElementName=AttractionSlider,Path=Value}"
                                               Variation="{Binding ElementName=VariationSlider,Path=Value}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <userCtl:AnimationDemo Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
    
    
</UserControl>

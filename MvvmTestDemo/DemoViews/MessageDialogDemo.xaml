<UserControl x:Class="MvvmTestDemo.DemoViews.MessageDialogDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmTestDemo.DemoViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <WrapPanel Width="{StaticResource DemosViewViewDefaultWidth}" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Width="200" Height="34"
                Content="ShowMessageDialogSuccess"
                Click="Button_Click" />
        <Button Width="200" Height="34"
                Content="ShowMessageDialogInfo"
                Margin="30,0"
                Click="Button_Click" />
        <Button Width="200" Height="34"
                Content="ShowMessageDialogWarning"
                Click="Button_Click" />
        <Button Width="200" Height="34"
                Content="ShowMessageDialogError"
                Margin="0,30"
                Click="Button_Click" />
        <Button Width="200" Height="34"
                Content="ShowMessageDialogFatal"
                Margin="30,0"
                Click="Button_Click" />
        <Button Width="200" Height="34"
                Content="ShowMessageDialogQuestion"
                Click="Button_Click" />
        <Button Width="200" Height="34"
                Content="ShowMessageDialogCustom"
                Click="Button_Click" />
    </WrapPanel>

</UserControl>

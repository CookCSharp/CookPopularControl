<UserControl x:Class="MvvmTestDemo.DemoViews.CheckBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox Width="220" Height="60"
                          Content="LineCheckBox"
                          FontSize="20"
                          Padding="10,0,0,0" ToolTip="LineCheckBox"
                          pc:CheckBoxAssistant.FillBrush="{StaticResource PrimaryBackgroundBrush}"
                          pc:CheckBoxAssistant.FillSize="50" pc:CheckBoxAssistant.FillThickness="5"
                          pc:CheckBoxAssistant.FillType="Line" />
            <CheckBox Width="230" Height="30"
                          Content="RectangleCheckBox"
                          FontSize="20"
                          Margin="30,0" Padding="10,0,0,0" ToolTip="RectangleCheckBox"
                          pc:CheckBoxAssistant.FillBrush="{StaticResource PrimaryThemeBrush}"
                          pc:CheckBoxAssistant.FillSize="15" pc:CheckBoxAssistant.FillType="Rectangle" />
            <CheckBox Width="200" Height="30"
                          Content="CheckCheckBox"
                          Background="Red"
                          FontSize="20"
                          Padding="10,0,0,0" ToolTip="CheckCheckBox"
                          pc:CheckBoxAssistant.FillBrush="{StaticResource PrimaryBackgroundBrush}"
                          pc:CheckBoxAssistant.FillSize="25" pc:CheckBoxAssistant.FillThickness="1"
                          pc:CheckBoxAssistant.FillType="Check" />
            <CheckBox Width="220" Height="60"
                          Content="LineCheckBox"
                          FontSize="20"
                          Margin="0,20" Padding="10,0,0,0" ToolTip="LineCheckBox"
                          pc:CheckBoxAssistant.FillBrush="{StaticResource PrimaryBackgroundBrush}"
                          pc:CheckBoxAssistant.FillSize="50" pc:CheckBoxAssistant.FillThickness="5"
                          pc:CheckBoxAssistant.FillType="Line" IsEnabled="False" />
        </WrapPanel>
    </ScrollViewer>
</UserControl>

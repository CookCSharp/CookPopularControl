                       BorderBrush="{StaticResource AssistantThemeBrush}"
                       BorderThickness="1"
                       Background="#F0F0F0"
                       Value="0"
                       Minimum="0" Maximum="100"
                       Margin="20,0"
                       pc:ScrollBarAssistant.ThumbInsideMargin="5" Orientation="Horizontal"
                       Style="{StaticResource NoRepeatButtonScrollBarStyle}" />
        </WrapPanel>
        <WrapPanel Margin="0,20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ScrollViewer Width="200" Height="200"
                          pc:ScrollViewerAssistant.IsAutoHideScrollBar="False" pc:ScrollViewerAssistant.IsCornerShow="True"

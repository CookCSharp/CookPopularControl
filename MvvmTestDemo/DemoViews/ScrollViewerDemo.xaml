            <ScrollBar Width="50" Height="100"
                       BorderBrush="{StaticResource AssistantThemeBrush}"
                       BorderThickness="1"
                       Background="#F0F0F0"
                       Value="0"
                       Minimum="0" Maximum="100"
                       Orientation="Vertical"
                       Style="{StaticResource DefaultScrollBarStyle}" />
            <ScrollBar Width="50" Height="100"
                       BorderBrush="{StaticResource AssistantThemeBrush}"
                       BorderThickness="1"
                       Background="#F0F0F0"
                       Value="0"
                       Minimum="0" Maximum="100"
                       Margin="30,0"
                       pc:ScrollBarAssistant.IsShowScrollBarRepeatButton="False"
                       pc:ScrollBarAssistant.ThumbInsideMargin="0,5" Orientation="Vertical"
                       Style="{StaticResource ThumbMarginScrollBarStyle}" />
            <ScrollBar Width="300" Height="50"
                       BorderBrush="{StaticResource AssistantThemeBrush}"
                       BorderThickness="1"
                       Background="#F0F0F0"
                       Value="0"
                       Minimum="0" Maximum="100"
                       Orientation="Horizontal"
                       Style="{StaticResource NoRepeatButtonScrollBarStyle}" />

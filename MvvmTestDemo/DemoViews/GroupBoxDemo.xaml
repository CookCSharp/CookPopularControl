<UserControl x:Class="MvvmTestDemo.DemoViews.GroupBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmTestDemo.DemoViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1000" Background="#F0F0F0">

    <ScrollViewer>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox BorderBrush="Red" BorderThickness="4"
                      Width="300" Height="400" 
                      pc:GroupBoxAssistant.HeaderBackground="#F0F0F0"
                      pc:GroupBoxAssistant.HeaderHorizontalAlignment="Left"
                      Foreground="{StaticResource AssistantThemeBrush}"
                      FontSize="20">
                <GroupBox.Header>
                    <Button Content="写代码的厨子" Width="200" Height="40"/>
                </GroupBox.Header>
                <Border Background="Green">
                    <Button Content="DefaultGroupBox" Width="200" Height="40"/>
                </Border>
            </GroupBox>
            <GroupBox Header="写代码的厨子"
                      Style="{DynamicResource CustomHeaderGroupBoxStyle}"
                      Width="300" Height="400"
                      Margin="30,0">
                <Button Content="CustomHeaderGroupBox" Width="250" Height="40" />
            </GroupBox>
            <GroupBox pc:FrameworkElementBaseAttached.CornerRadius="0"
                      pc:FrameworkElementBaseAttached.IconGeometry="{StaticResource EyeGeometry}"
                      pc:FrameworkElementBaseAttached.ShadowEffect="{StaticResource ShadowEffectDepth3}"
                      Header="写代码的厨子"
                      Style="{DynamicResource CustomHeaderGroupBoxStyle}"
                      Width="300" Height="400"
                      Foreground="#FFFFFF"
                      Margin="0,0">
                <Grid Width="300" Height="350">
                    <Image Source="../Resources/Gif/tomcat.jpg" Stretch="Uniform" />
                </Grid>
            </GroupBox>
        </WrapPanel>
    </ScrollViewer>

</UserControl>

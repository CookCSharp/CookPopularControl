<UserControl x:Name="RootDecorator"
             x:Class="MvvmTestDemo.UserControls.AdornerDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmTestDemo.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="https://Chance.CookPopularControl/2021/xaml"
             mc:Ignorable="d"
             Focusable="True"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <StackPanel x:Name="RootGrid"
                Width="400" Height="400"
                Background="#FF9C8844"
                HorizontalAlignment="Left">
        <Button x:Name="ChanceBtn"
                Width="300" Height="40"
                Content="Chance" />
        <TextBox x:Name="ChanceTxt"
                 Width="300" Height="40"
                 Text="Chance"
                 Margin="0,50" />
        <Button Width="300" Height="40"
                Content="CloseDialogBox"
                Command="{x:Static pc:DialogBox.CloseDialogCommand}" />
    </StackPanel>

</UserControl>

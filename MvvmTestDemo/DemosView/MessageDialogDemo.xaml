<UserControl x:Class="MvvmTestDemo.DemosView.MessageDialogDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmTestDemo.DemosView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="ShowMessageDialogSuccess" Width="200" Height="34" Click="Button_Click" />
        <Button Content="ShowMessageDialogInfo" Width="200" Height="34" Click="Button_Click" Margin="50"/>
        <Button Content="ShowMessageDialogWarning" Width="200" Height="34" Click="Button_Click"/>
        <Button Content="ShowMessageDialogError" Width="200" Height="34" Click="Button_Click" Margin="30"/>
        <Button Content="ShowMessageDialogFatal" Width="200" Height="34" Click="Button_Click" />
        <Button Content="ShowMessageDialogQuestion" Width="200" Height="34" Click="Button_Click" Margin="50"/>
        <Button Content="ShowMessageDialogCustom" Width="200" Height="34" Click="Button_Click" />
    </WrapPanel>

</UserControl>
